{
  "name": "ai-receptionist-backend",
  "version": "1.0.0",
  "description": "AI-powered virtual receptionist backend",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "postinstall": "prisma generate",
    "start": "node dist/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
    "test:stress": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=stress --testTimeout=60000",
    "test:security": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=security",
    "test:all": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --testTimeout=60000",
    "test:email": "tsx scripts/test-email.ts"
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@prisma/client": "^6.19.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^2.0.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@xenova/transformers": "^2.17.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "groq-sdk": "^0.8.0",
    "jsonwebtoken": "^9.0.3",
    "minisearch": "^7.2.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "socket.io": "^4.7.2",
    "sql.js": "^1.10.0",
    "typescript": "^5.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/exceljs": "^0.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.16.0",
    "@types/sql.js": "^1.4.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "prisma": "^6.19.1",
    "socket.io-client": "^4.8.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.6.2"
  }
}
