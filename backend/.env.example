# ============================================
# AI Virtual Receptionist - Backend Configuration
# ============================================
# Copy this file to .env and fill in the values

# ===================
# REQUIRED VARIABLES
# ===================

# Groq AI API Key (get from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Admin Panel Password (change this in production!)
ADMIN_PASSWORD=your_secure_password_here

# ===================
# OPTIONAL VARIABLES
# ===================

# Server Configuration
PORT=3000
NODE_ENV=production

# Groq Model (default: llama-3.3-70b-versatile)
GROQ_MODEL=llama-3.3-70b-versatile

# Email Configuration (for appointment confirmations)
# Leave empty to use Ethereal (testing) or configure real SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@yourbusiness.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Database Path (SQLite)
DATABASE_PATH=./data/database.sqlite
